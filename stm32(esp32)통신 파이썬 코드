import socket

ESP32_IP = "172.30.1.45"   # ESP32가 출력한 IP로 변경
PORT = 5000

sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
sock.connect((ESP32_IP, PORT))

print("Connected to ESP32")

while True:
    cmd = input("명령(F,B,S): ").strip().upper()

    if cmd not in ["F", "B", "S"]:
        print("F, B, S 만 입력가능!")
        continue

    sock.send(cmd.encode())
    print("보냄 →", cmd)
